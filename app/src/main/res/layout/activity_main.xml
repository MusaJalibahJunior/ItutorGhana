<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to IturtorGhana"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your Service"
        android:layout_above="@id/findateacherbutton"
        android:layout_centerInParent="true"
        android:layout_margin="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/findateacherbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Find a Teacher"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/becomeateacherbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/findateacherbutton"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Become a Teacher"
        android:textColor="@color/white" />

</RelativeLayout>